<Window x:Class="StockMarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockMarket"
        mc:Ignorable="d"
        Title="Welcome to Wolf Street" Height="353" Width="385" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Canvas Background="#FF7AED0C">
        <Button x:Name="new_game_button" Content="New Capital Adventure" Canvas.Left="74" Canvas.Top="101" Height="50" Width="228" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Bauhaus 93" FontSize="20" Click="new_game_button_Click"/>
        <Label Content="The Wall of Wolf Street" Canvas.Left="10" Canvas.Top="10" Height="73" Width="356" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Bauhaus 93" FontSize="30"/>
        <Button x:Name="how_to_button" Content="What to do?" Canvas.Left="74" Canvas.Top="156" Height="50" Width="228" FontFamily="Bauhaus 93" FontSize="20" Click="how_to_button_Click"/>
        <Button x:Name="exit_button" Content="Exit" Canvas.Left="74" Canvas.Top="240" Height="50" Width="228" FontFamily="Bauhaus 93" FontSize="25" Click="exit_button_Click"/>
    </Canvas>
</Window>
